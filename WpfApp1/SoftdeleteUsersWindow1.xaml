        <Button Content="确认删除" HorizontalAlignment="Center" Margin="12.882,16.2,18.2,16.8" VerticalAlignment="Center" Width="75" Click="Button_Click" Grid.Column="2" Grid.Row="7"/>
        <Button Content="返回" HorizontalAlignment="Center" Margin="132.8,16.2,132.2,16.8" VerticalAlignment="Center" Width="75" RenderTransformOrigin="2.627,1.635" Grid.Column="3" Grid.Row="7" Click="ButtonCancel_Click"/>
        <TextBox x:Name="txtId" Grid.Column="3" HorizontalAlignment="Stretch" Height="23" Margin="85.8,7.2,83.2,5.8" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
