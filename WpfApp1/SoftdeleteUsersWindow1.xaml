        <Label Content="邮箱" Grid.Column="2" HorizontalAlignment="Center" Margin="12.882,5.2,35.2,6.8" Grid.Row="4" VerticalAlignment="Center" Width="58"/>
        <Label Content="用户类型" Grid.Column="2" HorizontalAlignment="Center" Margin="12.882,5.2,35.2,4.8" Grid.Row="5" VerticalAlignment="Center" Width="58"/>
        <TextBox x:Name="txtName" Grid.Column="3" HorizontalAlignment="Stretch" Height="23" Margin="85.8,7.2,83.2,5.8" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <TextBox x:Name="txtMail" Grid.Column="3" HorizontalAlignment="Stretch" Height="23" Margin="85.8,6.2,83.2,6.8" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <TextBox x:Name="txtType" Grid.Column="3" HorizontalAlignment="Stretch" Height="23" Margin="85.8,6.2,83.2,6.8" Grid.Row="5" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>

