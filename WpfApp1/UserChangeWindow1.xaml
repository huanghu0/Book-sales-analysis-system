        <Button Content="取消" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="75" RenderTransformOrigin="2.627,1.635" Grid.Column="2" Grid.Row="7" Click="ButtonCancel_Click"/>
        <TextBox Name="Txt_ID" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="85.8,6.6,83.2,5.6" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <Label Name="Lab_ID" Content="ID" Grid.Column="1" HorizontalAlignment="Center" Margin="61.4,0,62.2,4.8" Grid.Row="2" VerticalAlignment="Bottom"/>
        <Label Name="Lab_birthday" Content="生日" Grid.Column="1" HorizontalAlignment="Center" Margin="52.4,5.4,35.2,5.8" Grid.Row="3" VerticalAlignment="Center" Width="58"/>
        <Label Name="Lab_email" Content="邮箱" Grid.Column="1" HorizontalAlignment="Center" Margin="52.4,5.2,35.2,6" Grid.Row="4" VerticalAlignment="Center" Width="58"/>
        <Label Name="Lab_type" Content="用户类型" Grid.Column="1" HorizontalAlignment="Center" Margin="27.4,4.2,18.2,6.8" Grid.Row="5" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.897,0.565"/>
        <TextBox Name="Txt_birthday" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="85.8,6.4,83.2,5.8" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <TextBox Name="Txt_email" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="85.8,6.2,83.2,6" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <TextBox Name="Txt_type" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="85.8,6,83.2,6.2" Grid.Row="5" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>

