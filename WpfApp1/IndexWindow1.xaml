        <Button Content="个人信息" HorizontalAlignment="Center" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="100" Click="Button_Click"/>
        <Button Content="订单信息" HorizontalAlignment="Center" Margin="0" Grid.Row="3" VerticalAlignment="Center" Width="100" Click="Button_Click_1"/>
        <Button Content="返回" HorizontalAlignment="Center" Margin="40,38.2,39.2,28.4" Grid.Row="4" VerticalAlignment="Center" Width="100" Click="Button_Click_2"/>
        <Grid.Background>
            <ImageBrush ImageSource="images/background.jpg" />
        </Grid.Background>
    </Grid>
</Window>
